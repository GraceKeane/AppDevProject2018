<?xml version="1.0" encoding="utf-8" ?>
            <!--Title-->
<ContentPage Title="Otter - Dobharrach" 
             
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppDevProject2018.ImagePage4">
    <ContentPage.Content>

        <StackLayout>
            <!-- Information about the animal as well as position, color, fontsize info -->
            <Label Text="Otters have long, slim bodies and relatively short limbs. Their most striking features is that they have powerful webbed feet used to swim and their seal - like abilities holding their breath underwater. Most Otters have sharp claws on their feet and all except the sea otter have long, muscular tails. Otters mainly diet on fish - Tap the image to go onto the next Animal!"
            HorizontalOptions="Center" TextColor="Black" FontSize="Small" FontFamily="Questrial"/>

            <!-- Image name and setting the image to scle to fit the size of the page-->
            <Image x:Name="image"  Aspect="AspectFit">
                
                <Image.GestureRecognizers>
                    <!-- Setting how many taps the image needs to go onto the next page -->
                    <TapGestureRecognizer Tapped = "TapGestureRecognizer_Tapped_1"/>
                </Image.GestureRecognizers>
            </Image>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>